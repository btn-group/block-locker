{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReceiveAnswer",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "create_or_update_locker"
      ],
      "properties": {
        "create_or_update_locker": {
          "type": "object",
          "required": [
            "status",
            "user_locker"
          ],
          "properties": {
            "status": {
              "$ref": "#/definitions/ResponseStatus"
            },
            "user_locker": {
              "$ref": "#/definitions/UserLocker"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "unlock_locker"
      ],
      "properties": {
        "unlock_locker": {
          "type": "object",
          "required": [
            "status"
          ],
          "properties": {
            "status": {
              "$ref": "#/definitions/ResponseStatus"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    },
    "ResponseStatus": {
      "type": "string",
      "enum": [
        "Success"
      ]
    },
    "UserLocker": {
      "type": "object",
      "required": [
        "content",
        "locked",
        "passphrase",
        "whitelisted_addresses"
      ],
      "properties": {
        "content": {
          "type": "string"
        },
        "locked": {
          "type": "boolean"
        },
        "passphrase": {
          "type": "string"
        },
        "whitelisted_addresses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HumanAddr"
          }
        }
      }
    }
  }
}
